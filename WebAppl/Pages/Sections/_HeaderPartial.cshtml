@using WebAppl.Pages.Components
<header>
    <div class="container">
        <a id="logo" asp-page="/index"><img src="images/silicon-logo.svg" alt="Logotype for Silicon" /></a>

        <div id="menu">
            <nav>
                <a class="menu-link" href="showcase">Overview</a>
                <a class="menu-link" href="features">Features</a>
                <a class="menu-link" href="contact.html">Contact</a>
            </nav>
        </div>

        <div class="btn-switch">
            <label>Light</label>
            <label class="switch" for="switch-mode">
                <input type="checkbox" id="switch-mode" />
                <span class="slider round"></span>
            </label>
            <label>Dark</label>
        </div>

        <div class="account-buttons">
            <partial name="~/Pages/Components/_Button.cshtml" model='new ButtonViewModel {ClassName="btn-gray", Link= "/SignIn",Icon="fa-solid fa-arrow-right-to-bracket", Text = "Sign In", }' />
            <partial name="~/Pages/Components/_Button.cshtml" model='new ButtonViewModel {ClassName="btn-theme", Link= "/SignUp",Icon="fa-regular fa-user", Text = "Sign Up", }' />
        </div>





    </div>
</header>